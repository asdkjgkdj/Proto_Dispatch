{
  "name": "proto-dispatch",
  "version": "0.1.0",
 "main": "electron/main.js",
  "scripts": {
   "dev": "vite",
   "electron:dev": "concurrently \"npm:dev\" \"wait-on http://localhost:3000 && electron .\"",
   "build": "vite build",
   "dist": "npm run build && electron-builder"
  },
 "build": {
   "appId": "com.yourcompany.proto-dispatch",
   "files": [
     "dist/**/*",
     "electron/**/*"
   ],
   "directories": {
     "buildResources": "public"
   },
   "mac": { "target": "dmg" },
   "win": { "target": "nsis" },
   "linux": { "target": "AppImage" }
 },
  "devDependencies": {
    "electron": "^26.0.0",
    "electron-builder": "^24.0.0",
    "concurrently": "^7.0.0",
    "wait-on": "^7.0.0"
  }
}
